- model_class = Document
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:file_name) + ':'
  %br
  = @document.file_name
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @document.user.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), documents_path, :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), document_path(@document), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
