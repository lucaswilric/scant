= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email

  -# Dropbox authorisation
  .field
    Linked to Dropbox:

    - if @user.dropbox?
      %strong
        Yes
    - else
      %strong
        No
      = link_to 'Link to Dropbox', dropbox_auth_url


  -# Evernote authorisation

  .actions
    = f.submit 'Save'
